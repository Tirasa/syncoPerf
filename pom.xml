            </includes>            
          </testResource>
          <testResource>
            <directory>src/main/resources/pgjsonb/domains</directory>
            <targetPath>${project.build.directory}/test-classes/domains</targetPath>
            <filtering>true</filtering>
          </testResource>
        </testResources>
      </build>
